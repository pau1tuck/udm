{
    "extends": "./tsconfig_base.json",
    "compilerOptions": {
        "noEmit": false,
        "incremental": true,
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "ES5",
            "ES6",
            "DOM",
            "esnext.asynciterable"
        ],
        "skipLibCheck": true,
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "~/*": [
                "src/*"
            ]
        },
        "moduleResolution": "node",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/"
    ]
}